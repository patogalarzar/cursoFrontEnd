azul = #22bce0
gris_oscuro = #444
naranja = #DD4F24
body
	background #e8e8e8
	color gris_oscuro
	font-family Arial
	font-size 16px

header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img 
			width 52px

	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			font-weight bold
			font-style italic
			text-decoration none

		.publicar
			background naranja
			color blanco
			float right
			font-style italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2

			img
				width 50px
				border-radius 50%
		.flechita
			background naranja
			color white
			display block
			padding 3px
			position absolute
			right 0
			top 15px
			text-align right
			width 50%

nav
	background azul
